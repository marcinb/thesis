%h1= "Posts"
%p= link_to "new post", new_post_path

%table
  %thead
    %tr
      %th= "Title"
      %th= "Body"
      %th{:colspan => 3}= "actions"
  
  %tbody
    - for post in @posts
      %tr{ :class => cycle(:odd, :even) }
        %td= post.title
        %td= post.body
        %td.action= link_to "show", post
        %td.action= link_to "edit", edit_post_path(post)
        %td.action= link_to "destroy", post, :confirm => 'are_you_sure', :method => :delete
